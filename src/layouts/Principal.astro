---
import Layout from "./Layout.astro"

interface Props {
  title: string
}

const { title } = Astro.props

---

<Layout title={title}>
  <div class="absolute inset-0 -z-10 h-full w-full bg-white bg-[linear-gradient(to_right,#8080800a_1px,transparent_1px),linear-gradient(to_bottom,#8080800a_1px,transparent_1px)] bg-[size:14px_24px]"></div>
  <div class="py-4 px-4 mx-auto max-w-screen-xl text-center lg:py-16 font-sans">
    <header class="mb-16">
      <h1 class="mb-4 text-4xl font-extrabold text-slate-800 md:text-5xl lg:text-6xl">Terror Outfit Generator</h1>
      <h2 class="text-lg font-normal text-slate-600 lg:text-xl sm:px-16 lg:px-48">An AI-powered tool that transforms your outfit into spooky Halloween styles.</h2>
    </header>
    <main>
      <slot />
    </main>
  </div>
</Layout>